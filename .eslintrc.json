{
    "env": {
        "browser": true,
        "es6" : true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
      "$": true,
      "Logger": true,
      "Mustache": true,
      "civData": true,
      "unitData" : true,
      "curCiv" : true,
      "prettify": true,
      "shortify": true,
      "population" : true,
      "ui" : true,
      "dataset" : true,
      "getCivType" : true,
      "settings" : true,
      "logSearchFn" : true,
      "getCurDeityDomain" : true,
      "calcWorkerCost" : true,
      "calcZombieCost" : true,
      "isValid" : true,
      "updateAll" : true,
      "getLandTotals" : true,
      "resetCivClicker" : true,
      "CivObj" : true,
      "copyProps" : true,
      "calculatePopulation" : true
    }
}
