{
    "env": {
        "browser": true,
        "es6" : true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
      "$": true,
      "Logger": true,
      "Mustache": true,
      "civData": true,
      "unitData" : true,
      "curCiv" : true,
      "prettify": true,
      "population" : true
    }
}
